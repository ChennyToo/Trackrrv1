<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="9dp"
    android:layout_marginBottom="18dp">

    <ImageView
        android:id="@+id/dayNode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cal_unselected_day"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dayMonthTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_semibold"
        android:text="22"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toTopOf="@id/dayNode"
        app:layout_constraintBottom_toBottomOf="@id/dayNode"
        app:layout_constraintStart_toStartOf="@id/dayNode"
        app:layout_constraintEnd_toEndOf="@id/dayNode"/>
    <TextView
        android:id="@+id/dayWeekTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_semibold"
        android:text="Mo"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/dayNode"
        app:layout_constraintBottom_toBottomOf="@id/dayNode"
        app:layout_constraintStart_toStartOf="@id/dayNode"
        app:layout_constraintEnd_toEndOf="@id/dayNode"/>





</androidx.constraintlayout.widget.ConstraintLayout>